<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_harness1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pandruszkow.fypx5.Harness1">

    <TextView
        android:text="har1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hosting_button"
        android:layout_marginTop="20dp"
        android:id="@+id/har1_txt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosting_button"
        android:text="be discoverable"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_serverButton" />

    <Button
        android:text="discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discover_services"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hosting_button"
        android:onClick="onClick_discoverButton" />

    <Button
        android:text="THird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/third_button_h1" />
</RelativeLayout>
